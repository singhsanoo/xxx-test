<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:PACS.View"
    xmlns:vm="clr-namespace:PACS.ViewModel">


    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <views:HomeView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SettingsVM}">
        <views:SettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:InfoVM}">
        <views:InfoView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:NetworkSettingsOptionsVM}">
        <views:NetworkSettingsOptionsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:OperatingModeCommandsVM}">
        <views:OperatingModeCommandsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:FileSettingsVM}">
        <views:FileSettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:SystemConfigVM}">
        <views:SystemConfigView />
    </DataTemplate>

</ResourceDictionary>